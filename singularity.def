BootStrap: docker
From: mattocci/myenv:4.1.1


%apprun R
  exec R "${@}"

%apprun Rscript
  exec Rscript "${@}"

%runscript
  exec R "${@}"

%post
    DEBIAN_FRONTEND=noninteractive

    install2.r -n -4 --skipinstalled --error \
    --deps TRUE \
        patchwork \
        RColorBrewer \
        httpgd